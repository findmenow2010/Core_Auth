@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Roles list</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto;" asp-controller="Administration" asp-action="CreateRole">Add New</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role ID : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title"> @role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-controller="Administration" asp-action="editRole" asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-danger" asp-controller="Administration"  asp-action="deleteRole">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Created List
        </div>
        <div class="card-body">
            <div class="card-title">
                User the Button Below To Create New Role.
            </div>

            <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">
                Create Role
            </a> 
        </div>
    </div>
}

